'use strict';
const axios = require('axios');

module.exports = {
    async GET(req, res) {
        try {
            const response = await axios.get('URL_DE_LA_AP');
            res.status(response.status).json(response.data);
        } catch (error) {
            console.error('Error en petición GET:', error);
            res.status(500).json({ error: 'Error en petición GET' });
        }
    },

    async POST(req, res) {
        try {
            const response = await axios.post('URL_DE_LA_API', req.body);
            res.status(response.status).json(response.data);
        } catch (error) {
            console.error('Error en petición POST:', error);
            res.status(500).json({ error: 'Error en petición POST' });
        }
    },

    async PUT(req, res) {
        try {
            const response = await axios.put('URL_DE_LA_API/' + req.params.id, req.body);
            res.status(response.status).json(response.data);
        } catch (error) {
            console.error('Error en petición PUT:', error);
            res.status(500).json({ error: 'Error en petición PUT' });
        }
    },
};
